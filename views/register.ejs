<% include partials/header %>

<div class="container">
    <h1 class="center"><span class="title">Sign Up</span></h1>
    <form class="form-register" action="/register" method="POST">
        <div class="row">
            <div class="form-group col-md-5 col-xs-12">
                <label for="inputFirstName">First Name:</label>
                <input type="text" class="form-control" name="first_name" id="inputFirstName" placeholder="First Name">
            </div>
            <div class="form-group col-md-5 col-xs-12">
                <label for="inputLastName">Last Name:</label>
                <input type="text" class="form-control" name="last_name" id="inputLastName" placeholder="Last Name">
            </div>
            <div class="form-group col-md-2 col-xs-12">
                <label for="inputAge">Age:</label>
                <input type="number" class="form-control" name="age" id="inputAge" min="0" max="100" placeholder="Age">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6 col-xs-12">
                <label for="inputEmail">Email:</label>
                <input type="email" class="form-control" name="email" id="inputEmail" placeholder="Email">
            </div>
            <div class="form-group col-md-6 col-xs-12">
                <label for="inputCountry">Country:</label>
                <input type="text" class="form-control" name="country" id="inputCountry" placeholder="Country">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6 col-xs-12">
                <label for="inputUsername">Username:</label>
                <input type="text" class="form-control" name="username" id="inputUsername" placeholder="Username">
            </div>
            <div class="form-group col-md-6 col-xs-12">
                <label for="inputPassword">Password:</label>
                <input type="password" class="form-control" name="password" id="inputPassword" placeholder="Password">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-12 col-xs-12 form-about">
                <label for="inputAbout">About me:</label>
                <textarea class="form-control form-about__about-textarea" maxlength="750" id="inputAbout" name="about" rows="4" cols="50"></textarea>
                <div class="align-right">
                    <p>* <span class="form-about__limit-characters">750</span> characters left</p>
                </div>
            </div>
        </div>
        <div class="row">
            <input type="submit" class="btn btn-success btn-center btn-submit" value="Sign Up">
        </div>
    </form>
</div>

<script type="text/javascript" src="/js/bootstrap.min.js"></script>
<script>
    // Update how many characters the user can use
    document.getElementsByClassName("form-about__about-textarea")[0].addEventListener("keyup", function() {
        document.getElementsByClassName("form-about__limit-characters")[0].textContent = 750 - document.getElementsByClassName("form-about__about-textarea")[0].value.length; 
    });
</script>

<% include partials/footer %>